<section id="contact" class="contact">
    <h2 class="contact__title">
        Contact
    </h2>
    <form class="contact__form container" action="/send" method="POST">
        <fieldset class="form__fieldset">
            <legend class="fieldset__legend">Un petit message ?</legend>

            {% for message in app.flashes('success') %}
            <div class="form__fieldset__flash">
                {{ message }}
            </div>
            {% endfor %}

            <label for="form__input" class="form__label">
                Votre adresse mail :
            </label>

            <input id="form__input" class="form__input" name="form__input" type="email" required>

            <label for="form__textarea" class="form__label">
                Votre message :
            </label>
            <textarea name="form__textarea" id="form__textarea" cols="30" rows="10" class="form__input"></textarea>

            <button type="submit" class="form__button">envoyer</button>

        </fieldset>
    </form>
</section>
